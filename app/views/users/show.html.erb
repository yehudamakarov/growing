<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @user.username %></title>
  </head>
  <body>
    <h1><%= @user.username %></h1>

    <table>
      <tr>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/sunday" method="get">
            <input type="submit" value="Sunday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/monday" method="get">
            <input type="submit" value="Monday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/tuesday" method="get">
            <input type="submit" value="Tuesday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/wednesday" method="get">
            <input type="submit" value="Wednesday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/thursday" method="get">
            <input type="submit" value="Thursday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/friday" method="get">
            <input type="submit" value="Friday">
          </form><br>
        </th>
        <th>
          <form action="/users/<%= @user.slug %>/tasks/saturday" method="get">
            <input type="submit" value="Saturday">
          </form><br>
        </th>
      </tr>
      <tr>
        <td>
          <ul>
            <% @user.day("sunday").each do |t| %>
              <form action="/tasks/id/<%= t.id %>" method="get">
                <input type="submit" value="<%= t.name %>">
              </form>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% @user.day("monday").each do |t| %>
