        </th>
        <th>
          <a href="/users/<%= @user.slug %>/tasks/saturday">Saturday</a><br>
        </th>
      </tr>
      <tr>
        <td>
          <ul>
            <% @user.day("sunday").each do |t| %>
              <a href="tasks/id/<%= t.id %>"><%= t.name %></a><br>
